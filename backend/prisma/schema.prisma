generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  IN_DELIVERY
  COMPLETED
  CANCELLED
}


model User {
  id       String @id @default(cuid())

  email    String @unique
  name     String
  city     String
  phone    String
  password String

  comments   Comment[]
  orders   Order[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())

  text      String
  rating    Int
  
  userId    String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Flower {
  id        String   @id @default(cuid())
  // name      String
  name_uk  String @default("")
  name_en  String @default("")

  color_uk      String @default("")
  color_en      String @default("")

  price     Int

  
  bouquets  BouquetFlower[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}

model BouquetImage {
  id        String   @id @default(cuid())
  url       String
  bouquetId String

  bouquet   Bouquet  @relation(fields: [bouquetId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bouquetId])
}

model Bouquet {
  id        String   @id @default(cuid())

  name_uk      String @default("")
  name_en      String @default("")

  size      Int
  price     Int
  
 
  images    BouquetImage[]
  flowers   BouquetFlower[]
  orderItems OrderItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BouquetFlower {
  id        String   @id @default(cuid())
  bouquetId String
  flowerId  String
  quantity  Int      @default(1) 

  bouquet   Bouquet  @relation(fields: [bouquetId], references: [id], onDelete: Cascade)
  flower    Flower   @relation(fields: [flowerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bouquetId, flowerId])
  @@index([bouquetId])
  @@index([flowerId])
}

model Order {
  id        String   @id @default(cuid())
  userId    String? // nullable для незалогінених користувачів
  status    OrderStatus   @default(PENDING)

  // Данні доставки
  deliveryMethod         String
  deliveryDate           String?
  deliveryTimePreference String
  deliveryExactTime      String?
  incognito              Boolean        @default(false)

  // Данні отримувача 
  isRecipientSender String
  recipientMobile   String
  recipientName     String
  recipientCity     String
  recipientAddress  String
  recipientNote     String?

   
  senderName   String?
  senderMobile String?
  senderCity   String?

  // Оплата
  paymentMethod String

  // Товари в замовленні
  items OrderItem[]

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model OrderItem {
  id        String @id @default(cuid())
  orderId   String
  bouquetId String
  quantity  Int
  price     Float  // зберігаємо ціну на момент замовлення
  size      String // "big", "medium", "small"

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  bouquet Bouquet @relation(fields: [bouquetId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([bouquetId])
}


