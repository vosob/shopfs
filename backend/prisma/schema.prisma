generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())

  email    String @unique
  name     String
  city     String
  phone    String
  password String

  comments   Comment[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  text      String
  userId    String

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Flower {
  id        String   @id @default(cuid())
  name      String
  color     String
  price     Int

  
  bouquets  BouquetFlower[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}

model BouquetImage {
  id        String   @id @default(cuid())
  url       String
  bouquetId String

  bouquet   Bouquet  @relation(fields: [bouquetId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bouquetId])
}

model Bouquet {
  id        String   @id @default(cuid())
  name      String
  size      Int
  price     Int
  
 
  images    BouquetImage[]
  flowers   BouquetFlower[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BouquetFlower {
  id        String   @id @default(cuid())
  bouquetId String
  flowerId  String
  quantity  Int      @default(1) 

  bouquet   Bouquet  @relation(fields: [bouquetId], references: [id], onDelete: Cascade)
  flower    Flower   @relation(fields: [flowerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([bouquetId, flowerId])
  @@index([bouquetId])
  @@index([flowerId])
}

